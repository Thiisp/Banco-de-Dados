
# banco de dados

pergunta = int(input('Digite a quantidade de Usuários que você deseja cadastrar: '))

for usuarios in range(pergunta):
    name = str(input(f'(Usuário {usuarios + 1}) Digite o nome do Usuário: '))
    user = str(input(f'(Usuário {usuarios + 1}) Digite o Usuário: '))
    password = str(input(f'(Usuário {usuarios + 1}) Digite a senha do Usuário: '))
    usuarios.append(user)
    print('')
    print('*' * 25)
    print('')
    print(f'O Usuário {user}, foi cadastrado com sucesso!')
    print('')
    print('*' * 25)
    print('')

print(f'Foram adicionados: {pergunta} Usuários!')



if user == 'thiisp' and password == 'thiago':
    print('Olá, {}! Seja bem vindo! Você é o {}° Usuário do aplicativo :)'
          .format(name.capitalize(), usuario1))

elif user == 'jhow' and password == 'jhow123':
    print('Olá, {}! Seja bem vindo! Você é o {}° Usuário do aplicativo :)'
          .format(name.capitalize(), usuario2))

elif user == 'lucas' and password == 'lukinhas':
    print('Olá, {}! Seja bem vindo! Você é o {}° Usuário do aplicativo :)'
          .format(name.capitalize(), usuario3))
else:
    print('Usuário ou senha incorreto!')

